        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_search_img"
        android:src="@drawable/search"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/toolbar_notification_img"
        android:layout_toStartOf="@+id/toolbar_notification_img" / -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_notification_img"
        android:src="@drawable/notification"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/toolbar_post_img"
        android:layout_toStartOf="@+id/toolbar_post_img"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/tvNotificationIndicator"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_toLeftOf="@+id/toolbar_post_img"
        android:layout_toStartOf="@+id/toolbar_post_img"
        android:layout_marginRight="8dp"
        android:text="6"
        android:background="#ffcc33"
        android:textColor="@color/selected_tab_color"
        android:textSize="10sp"
        android:visibility="gone"

        android:letterSpacing=".05"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_post_img"
        android:src="@drawable/camera"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="4dp"

         />

</RelativeLayout>

</android.support.v7.widget.Toolbar>

